{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=your_database;User=root;Password=your_password;Port=3306;"
  },  "JwtSettings": {
    "SecretKey": "your-secret-key",
    "Issuer": "HospitalManagement.API",
    "Audience": "HospitalManagementClients",
    "ExpiryInMinutes": "120"
  },  "EmailSettings": {
    "FromEmail": "your-email",
    "FromName": "ICareHub",
    "SendGridApiKey": "your-sendgrid-api-key",
    "FromPassword": "your-email-password",
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "EnableSsl": true
  }
}
